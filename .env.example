# OpenCode Server Environment Configuration
# Copy this file to .env and fill in your values

# Required: Password for server authentication
OPENCODE_SERVER_PASSWORD=your-secure-password-here

# Optional: Server port (default: 8888)
PORT=8888

# Optional: Path to OpenCode config directory (default: ~/.config/opencode)
# OPENCODE_CONFIG_DIR=/path/to/your/opencode/config
